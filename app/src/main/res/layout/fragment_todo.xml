<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warmGray_300"
    android:paddingHorizontal="20dp"> <!-- padding start, end 동시에 주는 효과 -->

    <ListView
        android:id="@+id/todoListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/warmGray_300"
        android:dividerHeight="10dp"
        android:layout_marginVertical="15dp"/> <!-- 위, 아래 패딩 주는 효과 -->
    <!-- divider 주면 각각 10dp 떨어져있는 꼼수 -->

</LinearLayout>